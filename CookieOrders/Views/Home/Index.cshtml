@model CookieViewModel

@{
    ViewData["Title"] = "Home Page";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <div>
        <p>Cookies are <b>$4/box</b> and gluten-free Trios are <b>$5/box</b>.</p>
        <p>
            Having problems with the site? <a href="mailto:lexithecookiegirl@gmail.com?subject=Girl Scout Cookies Order">E-mail Lexi</a> and include your name, address, and the number of boxes (and what kind) you'd like.
        </p>
    </div>
    @using (Html.BeginForm("Order", "Home", FormMethod.Post))
    {

        <div class="gridContainer">
            @for (int cookieCount = 0; cookieCount < Model.Cookies.Count; cookieCount++)
            {
                <div class="cookieItem">
                    @Html.Label(Model.Cookies[cookieCount].Name) <a href="#" data-toggle="popover" data-trigger="focus" title="@Model.Cookies[cookieCount].Name" data-content="@Model.Cookies[cookieCount].Description">(info)</a><br />

                    @Html.DropDownListFor(m => m.Cookies[cookieCount].Amount, new SelectList(HtmlLists.CookieAmounts, "Value", "Text"))<br />

                    <img src="@Model.Cookies[cookieCount].ImagePath" />
                </div>

            }
            <br />

                <p>
                    <input type="submit" value="Order" />
                    @*<button type="button" class="btn btn-success">Next ></button>*@
                </p>
            <p>

            </p>


        </div>

    }

    <script
    src="http://code.jquery.com/jquery-3.3.1.js"
    integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
    crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
    </script>

</body>
</html>